<ul class="header-menu">
  {% for item in items %}
    <li class="header-menu__item{% if item.below %} header-menu__item--has-children{% endif %}">
      <a href="{{ item.url }}" class="header-menu__link{% if item.in_active_trail %} is-active{% endif %}">{{ item.title }}</a>
      {% if item.below %}
        <button class="header-menu__toggle" aria-expanded="false" aria-label="Expandir submenÃº de {{ item.title }}">
          <span class="header-menu__toggle-icon"></span>
        </button>
        <ul class="header-menu__submenu" aria-hidden="true">
          {% for subitem in item.below %}
            <li class="header-menu__submenu-item">
              <a href="{{ subitem.url }}" class="header-menu__submenu-link{% if subitem.in_active_trail %} is-active{% endif %}">{{ subitem.title }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endfor %}
</ul>
